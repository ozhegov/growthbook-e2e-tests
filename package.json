{
	"name": "growthbook-e2e-tests",
	"version": "1.0.0",
	"main": "index.js",
	"scripts": {
		"prepare": "husky",
		"lint": "biome lint",
		"lint:tests": "eslint 'e2e/tests/**/*.test.ts'",
		"lint:all": "npm run lint && npm run lint:tests",
		"format": "biome format . --write",
		"check": "biome check .",
		"test": "playwright test",
		"test:smoke": "playwright test --grep @smoke",
		"test:regression": "playwright test --grep @regression",
		"test:headed": "playwright test --headed",
		"test:ui": "playwright test --ui",
		"test:debug": "playwright test --debug",
		"allure:report": "allure generate ./allure-results -o ./allure-report --clean",
		"allure:open": "allure open ./allure-report",
		"test:allure": "npm run test && npm run allure:report && npm run allure:open",
		"notify": "tsx e2e/notifications/notify.ts",
		"type-check": "tsc --noEmit",
		"docker:up": "docker compose up -d",
		"docker:down": "docker compose down",
		"docker:reset": "docker compose down -v --remove-orphans",
		"docker:logs": "docker compose logs -f growthbook"
	},
	"lint-staged": {
		"*.{ts,tsx,js,jsx,json}": [
			"biome check --write"
		]
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"description": "",
	"devDependencies": {
		"@biomejs/biome": "^2.3.11",
		"@faker-js/faker": "^10.2.0",
		"@playwright/test": "^1.57.0",
		"@types/node": "^25.0.3",
		"@typescript-eslint/eslint-plugin": "^8.54.0",
		"@typescript-eslint/parser": "^8.54.0",
		"allure-commandline": "^2.36.0",
		"allure-js-commons": "^3.4.4",
		"allure-playwright": "^3.4.4",
		"eslint": "^9.39.2",
		"eslint-plugin-playwright": "^2.5.1",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"ts-node": "^10.9.2",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3"
	}
}
